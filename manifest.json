{
  "manifest_version": 3,
  "name": "小红书 - 同步开启博主首页",
  "version": "1.6",
  "description": "当你在浏览博主内容时候，右侧同步显示该博主主页，避免打开新的Tab页面",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://*.xiaohongshu.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
